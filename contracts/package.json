{
  "name": "sentinel-blockchain",
  "version": "1.0.0",
  "description": "Blockchain contracts for Sentinel Forest Monitoring & 4K Club Management",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:certified": "hardhat run scripts/deploy-certified.js",
    "deploy:certified:local": "hardhat run scripts/deploy-certified.js --network localhost",
    "deploy:certified:mumbai": "hardhat run scripts/deploy-certified.js --network mumbai",
    "deploy:certified:polygon": "hardhat run scripts/deploy-certified.js --network polygon",
    "deploy:certified:zkevm": "hardhat run scripts/deploy-certified.js --network polygonZkEVMTestnet",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:zkevm": "hardhat run scripts/deploy-zkevm.js --network polygonZkEVM",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "clean": "hardhat clean"
  },
  "keywords": [
    "blockchain",
    "environmental",
    "forest",
    "monitoring",
    "4k-clubs",
    "kenya"
  ],
  "author": "Sentinel Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.0"
  }
}