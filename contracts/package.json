{
  "name": "sentinel-blockchain",
  "version": "1.0.0",
  "description": "Blockchain contracts for Sentinel Forest Monitoring & 4K Club Management",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:celo": "hardhat run scripts/deploy.js --network celo",
    "deploy:zkevm": "hardhat run scripts/deploy-zkevm.js --network polygonZkEVM",
    "deploy:zkevm-testnet": "hardhat run scripts/deploy-zkevm.js --network polygonZkEVMTestnet",
    "deploy:scroll": "hardhat run scripts/deploy.js --network scroll",
    "deploy:scroll-testnet": "hardhat run scripts/deploy.js --network scrollSepolia",
    "deploy:full": "hardhat run scripts/deploy-full.js",
    "verify": "hardhat verify --network localhost",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:zkevm": "hardhat verify --network polygonZkEVM",
    "verify:zkevm-testnet": "hardhat verify --network polygonZkEVMTestnet",
    "verify:scroll": "hardhat verify --network scroll",
    "verify:scroll-testnet": "hardhat verify --network scrollSepolia",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "interact": "hardhat run scripts/interact.js",
    "sample-data": "hardhat run scripts/sample-data.js",
    "clean": "hardhat clean",
    "test:zkevm": "hardhat test --network polygonZkEVMTestnet",
    "gas-report": "REPORT_GAS=true hardhat test"
  },
  "keywords": [
    "blockchain",
    "environmental",
    "forest",
    "monitoring",
    "4k-clubs",
    "kenya"
  ],
  "author": "Sentinel Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.0"
  }
}